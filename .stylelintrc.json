{
  "extends": ["stylelint-config-standard", "stylelint-config-hudochenkov/full"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": [2],
    "color-hex-case": "upper",
    "selector-max-type": 1,
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
    "function-parentheses-newline-inside": "never-multi-line"
  }
}
